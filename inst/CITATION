meta <- packageDescription("rCAX")
year <- sub("-.*", "", meta$Date)
note <- sprintf("R package version %s", meta$Version)  
bibentry(
bibtype = "TechReport",
title = paste0(meta$Package, ": ", meta$Title, ". ", note),
author = meta$Author,
year = year, 
institution = "Northwest Fisheries Science Center, Math Bio Program",
doi = "xxx/xxx")

